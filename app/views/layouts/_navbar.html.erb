<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <%= link_to lists_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My Lists", lists_path, class: "btn btn-outline-secondary" %>
        </li>
        <li class="nav-item">
          <%= link_to "Add a list", new_list_path, class: "btn btn-outline-success ml-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Movies", movies_path, class: "btn btn-outline-secondary ml-3" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle ml-3", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-danger dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary ml-3" %>
        </li>
      <% end -%>

    </ul>
  </div>
</div>
