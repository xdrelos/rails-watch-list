<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1400&q=80
);">
  <div class="container">
    <h1 class="text-center">Save any kind of movies!</h1>
    <p></p>
  </div>
</div>
<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <div class="div d-flex justify-content-between mb-3">
      <h2>My Lists</h2>
      <%= link_to 'Create a new list', new_list_path, class: 'btn btn-outline-success' %>

      </div>
      <hr>
      <div class="cards">
        <% if @lists.empty? %>
        <p>No lists yet!</p>
        <% end -%>
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image.attached? ? cl_image_path(list.image.key) : list.image_url %>)">
              <%= list.name %>
            </div>
          <% end -%>
        <% end -%>
      </div>
    </div>
    <div class="col-2">

    </div>
  </div>

</div>



