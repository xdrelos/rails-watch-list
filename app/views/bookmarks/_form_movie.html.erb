<%= simple_form_for([@movie, @bookmark], wrapper: :inline_form, html: { class: 'form-inline d-flex align-items-start'}) do |f| %>
  <%= f.input :comment, input_html: { placeholder: 'Enter a comment'} %>
  <%= f.association :list, collection: @lists, selected: (@list.id if @list), prompt: 'Select a list', input_html: { id: 'bookmark-select', class: 'select2' } %>
  <%= f.button :submit, class: 'btn btn-outline-primary' %>
<% end -%>
